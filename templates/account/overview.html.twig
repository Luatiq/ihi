{% extends 'base.html.twig' %}

{% set title %}{{ 'title.users'|trans }}{% endset %}

{% block body %}
    <h1 class="container mt-5 px-0">{{ title|trans }}</h1>

    <div class="card container mx-auto pt-3">
        <table class="table table-striped">
            <thead>
            <tr>
                <th scope="col" style="width: 50px">#</th>
                <th scope="col">{{ 'label.username'|trans }}</th>
                <th scope="col" class="text-end" style="width: 100px">{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for item in entities %}
                <tr>
                    <th scope="row">{{ item.id }}</th>
                    <td>{{ item }}</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="{{ 'label.actions'|trans }}">
                            <button type="button" class="btn btn-sm btn-primary" title="{{ 'button.edit'|trans }}">
{#                                <a href="{{ url('user.view', {entity:item.id}) }}">{{ 'button.edit'|trans }}</a>#}
                                {{ 'button.edit'|trans }}
                            </button>
                            <button type="button"
                                    title="{{ 'button.delete'|trans }}"
                                    class="btn btn-sm btn-danger {{ item.id == app.user.id ? 'disabled' }}">
                                {{ 'button.delete'|trans }}
                            </button>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <table>
            <thead>

            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
{% endblock %}