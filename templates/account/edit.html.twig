{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {{ form_start(form) }}

    <div class="columns is-centered is-vcentered" style="height: 100vh;">
        <div class="column is-half">
            <h1 class="title">Register</h1>

            <div class="box">
                <div class="field">
                    {{ form_label(form.username, 'Username'|trans, {'label_attr': {'class': 'label'}}) }}
                    {{ form_widget(form.username, {'attr': {'class': 'input'}}) }}
                </div>

                <div class="field">
                    {{ form_label(form.password, 'Password'|trans, {'label_attr': {'class': 'label'}}) }}
                    {{ form_widget(form.password, {'attr': {'class': 'input'}}) }}
                </div>

                {% if not form.vars.valid %}
                    <div class="message">
                        <div class="notification py-2 pl-2 is-danger">
                            {{ form_errors(form) }}
                        </div>
                    </div>
                {% endif %}

                <div class="is-grouped">
                    <div class="control">
                        <button class="button is-primary" type="submit">Register</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}
