{% extends 'base.html.twig' %}

{% block body %}
    <form action="{{ path('account.login') }}" method="post">
        <div class="columns is-centered is-vcentered" style="height: 100vh;">
            <div class="column is-half">
                <h1 class="title">Login</h1>

                <div class="box">
                    <div class="field">
                        <label class="label" for="username">Username</label>
                        <input class="input" type="text" id="username" name="_username" value="{{ lastUsername }}">
                    </div>

                    <div class="field">
                        <label class="label" for="password">Password</label>
                        <input class="input" type="password" id="password" name="_password">
                    </div>

                    {% if error %}
                        <div class="message">
                            <div class="notification py-2 pl-2 is-danger">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        </div>
                    {% endif %}

                    <div class="is-grouped">
                        <div class="control">
                            <button class="button is-primary" type="submit">Login</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <input type="hidden" name="_target_path" value="/account">
    </form>
{% endblock %}